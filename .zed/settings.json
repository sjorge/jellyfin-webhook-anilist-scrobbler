{
  "hard_tabs": false,
  "tab_size": 4,
  "languages": {
    "TypeScript": {
      "format_on_save": "on",
      "tab_size": 2,
      /*
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": [
            "x",
            "--bun",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      },
      */
      "language_servers": [
        "bun x typescript-language-server",
        "typescript-language-server",
        "!vtsls",
        "..."
      ]
    },
    "JSONC": {
      "format_on_save": "on",
      "tab_size": 2,
      /*
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": [
            "x",
            "--bun",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      },
      */
      "language_servers": [
        "bun x typescript-language-server",
        "typescript-language-server",
        "!vtsls",
        "..."
      ]
    }
  }
}
